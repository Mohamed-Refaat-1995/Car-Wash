@model CarService.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-4">
        
    </div>
</div>



@{
    ViewData["Title"] = "LogIn";
}

<main id="main">
    <!-- ======= Featured Section ======= -->
    <section id="featured" class="featured">
        <div class="container">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <!-- Section: Design Block -->
                    <section class="text-center">
                        <!-- Background image -->
                        <div class="p-5 bg-image" style="
          background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
          height: 300px;
          "></div>
                        <!-- Background image -->

                        <div class="card mx-4 mx-md-5 shadow-5-strong" style="
          margin-top: -100px;
          background: hsla(0, 0%, 100%, 0.8);
          backdrop-filter: blur(30px);
          ">
                            <div class="card-body py-5 px-md-5">

                                <div class="row d-flex justify-content-center">
                                    <div class="col-lg-8">
                                        <h2 class="fw-bold mb-5">سجل دخولك معنا</h2>
                                        <form asp-action="Login">
                                            <!-- UserName input -->
                                            <div class="form-outline mb-4">
                                                <label asp-for="Username" class="control-label">أسم المستخدم </label>
                                                <input asp-for="Username" type="text" id="form3Example3" class="form-control" />
                                                <span asp-validation-for="Username" class="text-danger"></span>
                                            </div>
                                            <!-- Password input -->
                                            <div class="form-group">
                                                <label asp-for="Password" class="control-label" for="form3Example4"> كلمة المرور</label>
                                                <input asp-for="Password" id="form3Example4" class="form-control" />
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                           
                                            <div class="form-group form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" asp-for="rememberMe" /> @Html.DisplayNameFor(model => model.rememberMe)
                                                </label>
                                            </div>

                                            <!-- Submit button -->
                                            <button type="submit" class="btn btn-block mb-4" style="background-color: #5691e9; color: whitesmoke; ">
                                                تسجيل الدخول
                                            </button>

                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Section: Design Block -->
                </div>

            </div>
        </div>

    </section>
</main>
