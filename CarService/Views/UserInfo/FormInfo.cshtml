                            <option value="@cityItem.Id">@cityItem.Name</option>
                        }
                    </select>

                    <span asp-validation-for="CityId" class="text-danger"></span>
                </div>
           

                <div class="form-group">
                    <label asp-for="Destrict" class="animate_animated animate_fadeInUp fw-bold">الحي:</label>
                    <input asp-for="Destrict" class="form-control" required />
                    <span asp-validation-for="Destrict" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label class="animate_animated animate_fadeInUp fw-bold" for="form5Example2" dir="rtl">الخدمة:</label>
                    <select class="form-select" aria-label="Default select example" asp-for="ServiceId" required>
                        <option> اختر الخدمة</option>
                        @foreach (var services in ViewBag.Services)
                        {
                            <option value="@services.Id">@services.Name</option>
                            @*<option value="تلميع داخلي متنقل"> تلميع داخلي متنقل</option>
                        }
                    </select>
                    
                 
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="animate_animated animate_fadeInUp fw-bold"> الجوال </label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="05_ _ _ _ _ _ _ _" data-mask="05________" dir="ltr" value="05" required />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block mb-4" style="width: 100%;    background-color: #30a1ce; font-size:100%;">ارسال</button>
                </div>
               
            </form>
        </div>
       


    </section>

