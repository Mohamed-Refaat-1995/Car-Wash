<main id="main">
    <!-- ======= Featured Section ======= -->
    <section id="featured" class="featured">
        <div class="container">

            <p class="animate_animated animate_fadeInUp fw-bold">سجل جوالك وبنتصل عليك:</p>
            <hr />

            <form asp-action="FormInfo">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              
                <div class="form-group mb-4">
                    <label class="animate_animated animate_fadeInUp fw-bold">المدينه</label>
                    
                    <select asp-for="CityId" id="CityId" class="form-control" required>
                        <option selected>اختر المدينه </option>
                        @foreach (City cityItem in ViewBag.Cities)
